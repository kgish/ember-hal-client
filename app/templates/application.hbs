<div class="container">
    <h1>HAL Client</h1>
    <p>
        An amazing application which will dazzle your family and friends.
    </p>
</div>

<div class="navbar navbar-default" role="navigation">
    <div class="container">
        <div class="navbar-header">
            {{#link-to "index" class="navbar-brand"}}Home{{/link-to}}
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-left">
                {{#if isAuthenticated}}
                    <li>{{#link-to 'products'}}Products{{/link-to}}</li>
                    {{#if isAdmin}}
                        <li>{{#link-to 'users'}}Users{{/link-to}}</li>
                    {{/if}}
                {{/if}}
                <li>{{#link-to 'help'}}Help{{/link-to}}</li>
                <li>{{#link-to 'about'}}About{{/link-to}}</li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li>{{#link-to 'root'}}<span class="glyphicon glyphicon-globe"></span> {{hostname}}{{/link-to}}</li>
                {{#if isAuthenticated}}
                    <li>{{#link-to 'user' currentUser.id}}<span class="glyphicon glyphicon-user"></span> {{currentUser.name}} ({{#if isAdmin}}admin{{else}}user{{/if}}){{/link-to}}</li>
                    <li><a href="#" {{action 'logout'}}>Logout</a></li>
                {{else}}
                    <li>{{#link-to 'signup'}}<span class="glyphicon glyphicon-thumbs-up"></span> Sign up{{/link-to}}</li>
                    <li>{{#link-to 'sessions.index'}}Login{{/link-to}}</li>
                {{/if}}
            </ul>
        </div>
    </div>
</div>

<div id="content" class="container">
    <div class="row">
        <div class="col-md-10">
            {{outlet}}
        </div>
    </div>
</div>
