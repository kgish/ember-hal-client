<h2 class="page-header">User
{{#if isAdmin}}
    <button type="submit" {{action 'prevUser' this}} title="Go to previous user" class="btn btn-default btn-sm">&laquo;</button>
    <button type="submit" {{action 'nextUser' this}} title="Go to next user" class="btn btn-default btn-sm">&raquo;</button>
{{/if}}
</h2>

<form class="form-horizontal">
    {{partial 'user/form'}}
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="button" class="btn btn-primary btn-sm" title="Edit this user" {{action "editUser" this}}>
                <span class="glyphicon glyphicon-edit"></span> Edit
            </button>
            {{#if isAdmin}}
                <button type="button" class="btn btn-default btn-sm" title="Cancel editing this user" {{action "cancelUser" this}}>
                    <span class="glyphicon glyphicon-minus"></span> Cancel
                </button>
            {{/if}}
            {{#if canDelete}}
                <button type="button" class="btn btn-default btn-sm" title="Delete this user" {{action "deleteUser" this}}>
                    <span class="glyphicon glyphicon-remove"></span> Delete
                </button>
            {{/if}}
        </div>
    </div>
</form>
